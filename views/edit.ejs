<%- include('partials/header')  %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blogs.title %></div>
    <form class="ui form" action="/blogs/<%= blogs._id %>?_method=PUT" method="post">
        <div class="field">
            <label for="">Title</label>
            <input type="text" name="title" value="<%= blogs.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" name="image" value="<%= blogs.image %>">
        </div>
        <div class="field">
            <label for="">Blog Content</label>
            <textarea name="body" id="" cols="30" rows="10"><%= blogs.body %></textarea>
        </div>
        <input class="ui green big basic button" type="submit">
    </form>
</div>







<%- include('partials/footer')  %>